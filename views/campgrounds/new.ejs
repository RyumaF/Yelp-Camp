<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">キャンプ場の新規登録</h1>
    <div class="offset-3 col-6">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">タイトル</label>
                <input type="text" name="campground[title]" id="title" class="form-control" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">ロケーション</label>
                <input type="text" name="campground[location]" id="location" class="form-control" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">画像の追加</label>
                <input type="file" class="form-control" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">価格</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">¥</span>
                    <input type="text" class="form-control" id="price" placeholder="0" aria-label="価格"
                        aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">説明</label>
                <textarea type="text" name="campground[description]" id="description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">登録する</button>
            </div>
            
        </form>
        <footer>
            <a href="/campgrounds">一覧へ</a>
        </footer>
    </div>
</div>
